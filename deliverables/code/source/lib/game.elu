global def game:getDescription(category, name)
{
	return game.map[category][name].description
} 

global def game.new(f, t, params, ret, desc, add)
{
	record = 
	{
		method = f,
		methodType = t,
		parameters = params,
		returnValues = ret,
		description = desc,
		additionalInformation = add
	}

	return record
}